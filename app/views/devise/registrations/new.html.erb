<div class="row">
  <div class="col-sm-12">
    <h2>Sign up</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(resource, as: resource_name, class: "form-horizontal", url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <!-- name info -->

        <%= render partial: 'basic_info', locals: {f: f} %>

      <!-- select the type of user -->

      <div class="form-group form-group-sm">
        <div class="col-sm-2">
            <%= f.label :type %><br />
        </div>
        <div class="col-sm-4">
          <%= f.select :type, options_for_select(%w[Freelancer Employer]), {}, class: "form-control" %>
        </div>
      </div>

      <!-- render either employer or freelancer partial -->

      <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <%= f.submit "Sign up", class: "btn btn-secondary btn-secondary-altered" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <%= render "devise/shared/links" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
