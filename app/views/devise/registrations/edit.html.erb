<div class="row">
  <div class="col-sm-12">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

  </div>
</div>

<div class="row">
  <div class="col-sm-12">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div style="display: none" class="basic_info_form">
        <%= render partial: 'basic_info', locals: {f: f} %>
      </div>

      <!-- only if freelancer is signed in, then display freelancer partial -->

      <% if user_signed_in? && current_user.type === 'Freelancer'%>

        <div>
          <%= render partial: 'freelancer', locals: {f: f} %>
        </div>

        <!-- only show employer partial if employer is signed in -->

      <% elsif user_signed_in? && current_user.type === 'Employer'%>

        <div>
          <%= render partial: 'employer', locals: {f: f} %>
        </div>

      <% end %>

      <div>
        <%= render partial: 'business_info', locals: {f: f} %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <p><button type="button" id="toggle-basic-info" class="toggle-basic-info btn btn-primary">
        toggle info
      </button></p>

      <div class="actions">
        <p><%= f.submit "Update", class: "btn btn-primary" %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">

<h3>Cancel my account</h3>

  </div>
</div>

<div class="row">
  <div class="col-sm-12">

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back, class: "btn btn-primary" %>

  </div>
</div>
