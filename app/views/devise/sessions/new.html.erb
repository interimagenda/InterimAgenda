<div class="row">
  <div class="col-sm-12">
    <h2>Log in</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(resource, as: resource_name, class: "form-horizontal", url: session_path(resource_name)) do |f| %>

    <div class="form-group form-group-sm">
      <div class="col-sm-2">
          <%= f.label :email %><br />
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: "devise-field form-control", placeholder: "your e-mail" %>
      </div>
    </div>

    <div class="form-group form-group-sm">
      <div class="col-sm-2">
          <%= f.label :password %><br />
      </div>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: "devise-field form-control", placeholder: "your password" %>
      </div>
    </div>


  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2 col-xs-10">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-xs-10">
        <%= f.submit "Log in", class: "btn btn-secondary btn-secondary-altered" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-xs-10">
        <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>

  </div>
</div>
