<div class="row">
  <div class="col-xs-12">
    <h2>Freelancers</h2>
  </div>
</div>

<!-- searchform gets rendered here -->

<div class="row">
  <div class="col-xs-12">

    <%= render 'search' %>

  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table">

      <!-- table header -->

      <tr>
        <th>name of freelancer</th>
        <th>business</th>
        <th>field</th>
        <th>availability</th>
      </tr>

      <!-- loop for creating overview of employers -->

      <% @freelancers.each do |freelancer| %>
        <tr>
          <td><%= link_to freelancer.first_name, freelancer_path(freelancer.id) %></td>
          <td><%= freelancer.business %></td>
          <td><%= freelancer.field %></td>
          <td><%= freelancer.availability %></td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
