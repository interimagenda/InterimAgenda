<div class="row">
  <div class="col-xs-12">
    <h2>Freelancers</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">

    <!-- search form for finding employers -->

    <%= form_tag '/freelancers', :method => "get", id: "search-form" do %>
    <%= search_field_tag :search, params[:search], placeholder: "insert a search query here" %>
    <%= submit_tag "search", :name => nil, id: "search-form", class: "btn-large waves-effect waves-light white-text red lighten-1 center" %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table">

      <!-- table header -->

      <tr>
        <th>name of freelancer</th>
        <th>business</th>
        <th>field</th>
        <th>availability</th>
      </tr>

      <!-- loop for creating overview of employers -->

    <% @freelancers.each do |freelancer| %>
      <tr>
        <td><%= link_to freelancer.first_name, freelancer_path(freelancer.id) %></td>
        <td><%= freelancer.business %></td>
        <td><%= freelancer.field %></td>
        <td><%= freelancer.availability %></td>
      </tr>
    <% end %>

  </table>
  </div>
</div>


