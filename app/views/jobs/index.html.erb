<div class="row">
  <div class="col-sm-12">
    <h2 class="thin">Jobs</h2>
  </div>
</div>

<% if user_signed_in? && current_user.type === 'Freelancer'%>

<div class="row">
  <div class="col-sm-12">
    <h3>search</h3>
    <%= render 'search' %>
  </div>
</div>

<% end %>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-responsive">

      <!-- table header -->

      <tr>
        <th>job title</th>
        <th>date created</th>
      </tr>

      <!-- loop for creating overview of employers -->

      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job_path(job.id) %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>

    </table>
  </div>
</div>

<% if user_signed_in? && current_user.type === 'Employer'%>

<div class="row">
  <div class="col s12">

    <%= link_to 'create job', new_job_path %>

  </div>
</div>

<% end %>
