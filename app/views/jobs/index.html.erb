<div class="row">
  <div class="col-sm-12">
    <h2 class="thin">Jobs</h2>
  </div>
</div>

<% if user_signed_in? && current_user.type === 'Freelancer'%>

<div class="row">
  <div class="col-sm-12">
    <h3>search</h3>
    <%= render 'search' %>
  </div>
</div>

<hr>

<% end %>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>job title</th>
          <th>date created</th>
        </tr>
      </thead>

      <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.title, job_path(job.id) %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>

<% if user_signed_in? && current_user.type === 'Employer'%>

<div class="row">
    <div class="col-sm-12">

    <%= link_to 'create job', new_job_path %>

  </div>
</div>

<% end %>
