<%= form_for @jobs do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :start_date %>
  <%= f.text_field :start_date %>

  <%= f.label :job_description %>
  <%= f.text_area :job_description %>

  <%= f.label :offered_pay_rate %>
  <%= f.text_field :offered_pay_rate %>

  <%= f.submit (@job.new_record? ? "Create" : "Update") %>

<% end %>



