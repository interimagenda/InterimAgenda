<div class="row">
  <div class="col-xs-12">
    <h2>Employers</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">

    <!-- search form for finding employers -->

    <%= form_tag '/employers', :method => "get", id: "search-form" do %>
    <%= search_field_tag :search, params[:search], placeholder: "insert a search query here" %>
    <%= submit_tag "search", :name => nil, id: "search-form", class: "btn-large waves-effect waves-light white-text red lighten-1 center" %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table">

      <!-- table header -->

      <tr>
        <th>employer</th>
        <th>location</th>
        <th>business</th>
        <th>field</th>
      </tr>

      <!-- loop for creating overview of employers -->

      <% @employers.each do |employer| %>
        <tr>
          <td><%= link_to employer.company_name, employer_path(employer.id) %></td>
          <td><%= employer.location %></td>
          <td><%= employer.business %></td>
          <td><%= employer.field %></td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
